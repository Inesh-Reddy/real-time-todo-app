generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  emial String @unique
  name String
  todos Todo[]
}

enum Status {
  Not_Started
  In_Progress
  Completed
}
model Todo {
  id Int @id @default(autoincrement())
  title String
  description String
  priority String
  status Status
  userId Int
  author User @relation(fields: [userId], references: [id])
}